{
    "plugins": [
        // ...
        "react-hooks"
    ],
    "rules": {
        "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
        "react-hooks/exhaustive-deps": "warn", // Checks effect dependencies
        "semi": [
            "warn",
            "always"
        ],
        "quotes": [
            "warn",
            "double",
            {
                "allowTemplateLiterals": true
            }
        ],
        "object-shorthand": [
            "warn",
            "always"
        ]
    },
    "parser": "babel-eslint"
}